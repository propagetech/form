{ 
   "Version": "2012-10-17", 
   "Statement": [ 
     {
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:Query",
        "dynamodb:Scan",
        "dynamodb:UpdateItem",
        "dynamodb:CreateTable",
        "dynamodb:DescribeTable"
      ],
      "Resource": "*"
    }, 
     { 
       "Effect": "Allow", 
       "Action": "ses:SendEmail", 
       "Resource": "*" 
     }, 
     { 
       "Effect": "Allow", 
       "Action": "logs:*", 
       "Resource": "*" 
     } 
   ] 
 }